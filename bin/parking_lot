#!/bin/bash

# Parking Lot Management System
# Usage: ./parking_lot [input_file]
#   No arguments: Interactive mode
#   With file: File input mode

if [ $# -eq 0 ]; then
    echo "Starting Parking Lot Management System in interactive mode..."
    echo "Type 'exit' to quit"
    echo "----------------------------------------"
    python3 src/main.py
elif [ $# -eq 1 ]; then
    echo "Running Parking Lot Management System with input file: $1"
    python3 src/main.py "$1"
else
    echo "Usage: $0 [input_file]"
    echo "  No arguments: Interactive mode"
    echo "  With file: File input mode"
    exit 1
fi
